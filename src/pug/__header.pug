include __mixins.pug
header.header.fixed-for-popup#header
    .container.container--large.header__container
        a(href="#").logo.header__logo
            span.logo__mobile
                include svg/logo-mobile.svg
            span.logo__desk
                include svg/Logo.svg
        -
            var list = [["About","#", ".start"], ["How it work","#", ".open"],
                ["Pricing","#",".pricing"],["Solution","#",".platforms"], ["Features","#",".stats"]]
        
        .header__menu.menu
            .menu__icon 
                button.menu__icon-svg
            nav.menu__body
                +nav-links(list, 'menu__link')(class=" menu__list")
        .header__login-wrap
            a(href="#login").header__login.nav-link.link--popup Login
            a(href="#signup").header__reg.link--popup Register

